= form_for :user, url: login_url, html: { id: "loginform" } do |f|
  fieldset
    legend Please sign in
    .form-group
      = f.label :email, class: "sr-only"
      = f.text_field :email, class: "form-control", placeholder: "Email address"


    .form-group
      = f.label :password, class: "sr-only"
      = f.password_field :password, class: "form-control", placeholder: "Password"
      / label.sr-only for="user_password" Password
      / input#user_password.form-control type="password" name="user[password]" placeholder="Password"
    .form-group
      = f.submit "Sign in", class: "btn btn-success"